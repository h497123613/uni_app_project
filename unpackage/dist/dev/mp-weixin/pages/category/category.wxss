.categoryContainer {
  height: 100%;
}
.categoryContainer .header {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #000;
  box-sizing: border-box;
}
.categoryContainer .header .search {
  text-align: center;
  line-height: 60rpx;
  height: 60rpx;
  width: 90%;
  font-size: 28rpx;
  color: #4cd964;
}
.categoryContainer .main {
  display: flex;
}
.categoryContainer .main .left {
  width: 150rpx;
}
.categoryContainer .main .left .item {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.categoryContainer .main .left .item.active {
  background-color: #bfa;
}
.categoryContainer .main .right {
  flex: 1;
  border-left: 1px solid #000;
  box-sizing: border-box;
}
.categoryContainer .main .right .rightScroll {
  height: calc(100vh - 80rpx);
}
.categoryContainer .main .right .rightScroll .titleImg {
  display: block;
  margin: 20rpx auto;
  width: 520rpx;
  height: 190rpx;
}
.categoryContainer .main .right .rightScroll .subCateList {
  display: flex;
  flex-wrap: wrap;
}
.categoryContainer .main .right .rightScroll .subCateList .subCate {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 33.33333%;
}
.categoryContainer .main .right .rightScroll .subCateList .subCate .subCateImg {
  width: 100%;
  height: 144rpx;
}
.categoryContainer .main .right .rightScroll .subCateList .subCate .subCateName {
  font-size: 28rpx;
}

